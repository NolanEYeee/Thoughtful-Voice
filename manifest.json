{
    "manifest_version": 3,
    "name": "Thoughtful Voice",
    "version": "1.0",
    "description": "Record and drop audio/video directly to Gemini and ChatGPT.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://gemini.google.com/*",
        "https://aistudio.google.com/*",
        "https://www.perplexity.ai/*",
        "https://perplexity.ai/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*",
                "https://chat.openai.com/*",
                "https://gemini.google.com/*",
                "https://aistudio.google.com/*",
                "https://www.perplexity.ai/*",
                "https://perplexity.ai/*"
            ],
            "js": [
                "dist/content.bundle.js"
            ],
            "css": [
                "src/styles/main.css",
                "src/styles/aesthetic-buttons.css"
            ]
        }
    ],
    "action": {
        "default_popup": "src/popup/popup.html",
        "default_icon": {
            "16": "icons/Thoughtful_Voice_icon.png",
            "48": "icons/Thoughtful_Voice_icon.png",
            "128": "icons/Thoughtful_Voice_icon.png"
        }
    },
    "icons": {
        "16": "icons/Thoughtful_Voice_icon.png",
        "48": "icons/Thoughtful_Voice_icon.png",
        "128": "icons/Thoughtful_Voice_icon.png"
    }
}